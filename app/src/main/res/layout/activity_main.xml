<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/rlthome"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupView1">
        <ImageButton
            android:layout_width="37dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/notification"
            android:background="@drawable/notification"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textColor="@color/text_color"
            android:textSize="22dp"
            android:layout_margin="13dp"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:id="@+id/file_menu"
            android:background="@drawable/menu"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_search"
        android:layout_below="@id/groupView1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/groupView2">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:layout_gravity="center"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D5D5D5"
        android:layout_marginTop="15dp"
        android:id="@+id/line1"
        android:layout_below="@id/groupView2">

    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupView3"
        android:layout_below="@id/line1"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/list"
            android:id="@+id/file_option"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/groupView3.5"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/sort_descending"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort by date"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/selecter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D5D5D5"
        android:layout_marginTop="15dp"
        android:id="@+id/line2"
        android:layout_below="@id/groupView3">

    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupView4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/line2">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/file_create"
            android:id="@+id/img_file_cre"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Create PDF"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@+id/img_file_cre"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="2"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_search"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D5D5D5"
        android:layout_marginTop="15dp"
        android:id="@+id/line3"
        android:layout_below="@id/groupView4">

    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupView5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/line3">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/file_create"
            android:id="@+id/img_file_convert"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@+id/img_file_convert"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="0"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_search"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D5D5D5"
        android:layout_marginTop="15dp"
        android:id="@+id/line4"
        android:layout_below="@id/groupView5">

    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupView6"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/line4">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/file_create"
            android:id="@+id/img_file_Scan"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan To Word"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@+id/img_file_Scan"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="0"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_search"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D5D5D5"
        android:layout_marginTop="15dp"
        android:id="@+id/line5"
        android:layout_below="@id/groupView6">
    </ImageView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line5"
        android:layout_marginLeft="10dp"
        android:id="@+id/rccv_file"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_Reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/btn_Action"
        app:borderWidth="0dp"
        android:src="@drawable/refresh"
        android:backgroundTint="#FFFFFF"
        android:layout_marginRight="16dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:borderWidth="0dp"
        android:src="@drawable/add"
        android:backgroundTint="#3907A8"
        android:layout_margin="16dp" />
</RelativeLayout>