<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialogmenu"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8E8E8E"
            android:text="Getting_Started"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_margin="7dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#1A000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/Share">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:src="@drawable/share"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu"
            android:text="Share"
            android:textSize="22dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#1A000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/Remane">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:src="@drawable/rename"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu"
            android:text="Remane"
            android:textSize="22dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#1A000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Duplicate"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:src="@drawable/dulicate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu"
            android:text="Duplicate"
            android:textSize="22dp"

            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#1A000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Delete"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:src="@drawable/delete1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:text="Delete"
            android:textSize="22dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/dialog_menu_cancel"
    android:id="@+id/Cancel">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0B2FE1"
        android:text="Cancel"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_margin="7dp"/>

</RelativeLayout>
</LinearLayout>